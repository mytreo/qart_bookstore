<div class="row">
  <div class="span6 offset3">
    <%= form_for(@author, :html => {:class => "input_form"}) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :description %>
        <%= f.text_area :description %>

        <%= f.submit "Commit", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>