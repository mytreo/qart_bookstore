<li class="panel panel-default">
<div class="media">
    <div class="media-left media-middle">
      <%= image_tag book.cover.url(:thumb), height: 150, wight: 150 %>
    </div>
    <div class="media-body">
      <div class="caption">
        <h3><%= link_to book.name, book %></h1>
        <small><%= authors_to_s(book.authors)%>  <%= '('+book.year.to_s+')'%></small>
      </div>
      <div class="thumbnail">
        <p><%=  short_text(book.description) %></p>
      </div>
       <div class="input-group">
            <span class="input-group-addon"><%=  number_to_currency(book.price , precision: 2,unit: 'â‚´') %></span>
           <% if signed_in_admin?%>
                   <div class="btn-group" >
                     <%= link_to 'Edit', edit_book_path(book) , class: "btn btn-success " %>
                     <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger"%>
                     </div>
             <% else %>
                   <%= button_to 'Add to Cart', line_items_path(book_id: book), class:"btn btn-success "%>
           <% end %>
       </div>
    </div>
</div>
</li>



