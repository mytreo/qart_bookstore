<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.name %></td>
        <td><%= order.address %></td>
        <td><%= order.email %></td>
        <td>  <div class="btn-group" >
          <%= link_to 'Show', order, class: "btn btn-primary "  %>
          <%if order.status==0 %>
            <%= link_to 'Send', order_path(order, status: 1),method: :patch , class: "btn btn-success " %>
            <%= link_to 'Reject', order_path(order, status: -1),method: :patch, class: "btn btn-danger", data: {status:-1}%>
          <%end%>
        </div> </td>
      </tr>
    <% end %>
  </tbody>
</table>
